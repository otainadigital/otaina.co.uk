{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run jekyll server",
      "type": "shell",
      "command": "bundle && bundle exec jekyll serve --livereload",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build"
      },
      "presentation": {
        "reveal": "never",
        "revealProblems": "onProblem",
        "panel": "dedicated",
        "focus": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
